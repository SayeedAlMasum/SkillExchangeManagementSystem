@* ForgotPasswordConfirmation.cshtml *@
@page
@model Web.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <h2 class="text-center mb-4">Password Reset Email Sent</h2>

            <p class="text-center">
                If an account with the email <strong>@Model.Email</strong> exists,
                we've sent a password reset link to it.
            </p>

            <div class="text-center mt-4">
                <a asp-page="/Account/ResetPassword"
                   asp-route-email="@Model.Email"
                   asp-route-token="@Model.Token"
                   class="btn btn-primary">
                    Reset Password Now
                </a>
            </div>

            <p class="text-center mt-4">
                <a asp-page="/Account/LogIn">Back to Login</a>
            </p>
        </div>
    </div>
</div>