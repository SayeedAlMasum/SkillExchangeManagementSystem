@* LogIn.cshtml *@
@page
@model Web.Pages.Account.LogInModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <h2 class="text-center mb-4">Sign In</h2>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label for="Email">Email</label>
                    <input type="email" asp-for="userLogInForm.Email" class="form-control" />
                </div>

                <div class="form-group mb-4">
                    <label for="Password">Password</label>
                    <input type="password" asp-for="userLogInForm.Password" class="form-control" />
                </div>
                <div class="text-right mt-2">
                    <a asp-page="/Account/ForgotPassword">Forgot Password?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">Sign In</button>

                <div class="text-center">
                    <p class="mb-1">Already have an account? <a href="/LogIn">Sign In here</a></p>
                    <p>Don't have an account? <a asp-page="/Register">Sign Up here</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}