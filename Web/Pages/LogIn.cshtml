@page
@model Web.Pages.LogInModel
@{
    ViewData["Title"] = "Log In";
}

<h2>Log In</h2>

<form method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" id="Email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" id="Password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
</form>

<div>
    <p>Don't have an account? <a asp-page="/Register">Register here</a>.</p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
