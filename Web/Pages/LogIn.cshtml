@* LogIn.cshtml *@
@page
@model Web.Pages.LogInModel
@{
    ViewData["Title"] = "Log In";
}

<div style="padding:1rem;border:1px solid black; margin:10rem;margin-right:25rem;margin-left:25rem;">
    <h2>Log In</h2>

    <form method="post">
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" id="Email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" id="Password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div><br />
        <button type="submit" class="btn btn-primary">Log In</button>
    </form>
</div>

<div>
    <p style="margin:10rem;margin-right:25rem;margin-left:25rem;">Don't have an account? <a asp-page="/Register">Register here</a>.</p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
